@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="navbar-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    <a class="navbar-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl='@Url.Action("Index", "Home", new { area = "" })'>
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </a>
}
else
{
    <a class="navbar-item" asp-area="Identity" asp-page="/Account/Login">Log in</a>
    <a class="navbar-item sign-up-btn hover:shadow-lg shadow-green-500" asp-area="Identity" asp-page="/Account/Register">Sign up</a>
}


